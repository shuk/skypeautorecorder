<Window x:Class="SkypeAutoRecorder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" WindowStartupLocation="CenterScreen"
        Icon="/SkypeAutoRecorder;component/Images/MainIcon.ico" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <CheckBox Margin="3">
                <TextBlock Text="Autostart with Windows" />
            </CheckBox>

            <CheckBox Margin="3">
                <TextBlock Text="Record unfiltered conversations to:" />
            </CheckBox>
            <TextBox Margin="20,3,3,3" />
            <TextBlock Text="Don't record conversations with contacts:" Margin="3,3,3,1" />
            <TextBox Margin="3,1,3,3" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,2,0">
                <Button Margin="1" Padding="8,3">OK</Button>
                <Button Margin="1" Padding="8,3">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
